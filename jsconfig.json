                        {format(new Date(item.created_date), "MMM d, yyyy 'at' h:mm a")}
                      </div>
                    </div>
                    {!item.budget_matched && (
                      <span className="text-xs bg-amber-100 text-amber-700 px-2 py-1 rounded-full font-medium">
                        Over Budget
