// Main Findify Component
export default function Findify() {
  const [messages, setMessages] = useState([
    { text: "Hey there! ðŸ‘‹ I'm Findify, your personal shopping assistant. I'll ask you a few quick questions to find the perfect product for you.\n\nSo, what product are you looking for?", isUser: false }
  ]);
  const [questionIndex, setQuestionIndex] = useState(0);
  const [productName, setProductName] = useState("");
  const [answers, setAnswers] = useState({});
  const [dynamicQuestions, setDynamicQuestions] = useState([]);
  const [flowComplete, setFlowComplete] = useState(false);
  const [products, setProducts] = useState([]);
  const [isLoadingProduct, setIsLoadingProduct] = useState(false);
  const [isThinking, setIsThinking] = useState(false);
  const [showHistory, setShowHistory] = useState(false);
  const [user, setUser] = useState(null);
  const chatEndRef = useRef(null);

  useEffect(() => {
    const loadUser = async () => {
      try {
        const currentUser = await db.auth.me();
        setUser(currentUser);
      } catch (e) {
        console.log("User not logged in");
      }
    };
    loadUser();
  }, []);

  useEffect(() => {
    chatEndRef.current?.scrollIntoView({ behavior: "smooth" });
  }, [messages, isThinking, isLoadingProduct]);

  const generateDynamicQuestions = async (productType) => {
    const questionsData = await db.integrations.Core.InvokeLLM({
      prompt: `You are a product expert. Generate exactly ${TOTAL_QUESTIONS} highly relevant, specific questions to ask someone shopping for: ${productType}

Rules:
- Question 1 MUST ALWAYS be about budget (e.g., "What's your budget for this?")
- Make questions specific to the product type (e.g., for vacuum: suction power in Pa, for shoes: slip-on vs lace-up, shoe size)
- Include technical specs where relevant
- Be friendly and use emojis
- Each question should have a short "key" (like "budget", "suction_power", "shoe_size", "closure_type")

Return an array of ${TOTAL_QUESTIONS} questions.`,
      response_json_schema: {
        type: "object",
        properties: {
          questions: {
            type: "array",
            items: {
              type: "object",
              properties: {
                key: { type: "string" },
                question: { type: "string" }
              }
            }
          }
        }
      }
    });
    
    return questionsData.questions || [];
  };

  const handleSend = async (text) => {
    const newMessages = [...messages, { text, isUser: true }];
    setMessages(newMessages);

    if (questionIndex === 0) {
      setProductName(text);
      setAnswers({ product: text });
      setIsThinking(true);

      const questions = await generateDynamicQuestions(text);
      setDynamicQuestions(questions);
      
      const firstQ = questions[0]?.question || "What's your budget for this?";
      setMessages((prev) => [...prev, { text: `Awesome, ${text}! ðŸŽ‰\n\n${firstQ}`, isUser: false }]);
      setQuestionIndex(1);
      setIsThinking(false);
    } else {
      const currentQuestion = dynamicQuestions[questionIndex - 1];
      const updatedAnswers = { ...answers, [currentQuestion.key]: text };
      setAnswers(updatedAnswers);

      if (questionIndex < TOTAL_QUESTIONS) {
        setIsThinking(true);
        setTimeout(() => {
          const nextQuestion = dynamicQuestions[questionIndex];
          setMessages((prev) => [...prev, { text: nextQuestion.question, isUser: false }]);
          setQuestionIndex((prev) => prev + 1);
          setIsThinking(false);
        }, 600);
      } else {
        setIsThinking(true);
        setTimeout(() => {
          setMessages((prev) => [
            ...prev,
            {
              text: `Perfect, I've got everything I need! ðŸŽ¯\n\nClick **Find Product** below and I'll find your ideal match.`,
              isUser: false,
            },
          ]);
          setFlowComplete(true);
          setIsThinking(false);
        }, 600);
      }
    }
  };

  const handleFindProduct = async () => {
    setIsLoadingProduct(true);

    const answersText = Object.entries(answers)
      .map(([key, value]) => `- ${key}: ${value}`)
      .join('\n');

    const prompt = `You are a product recommendation expert. Based on these user preferences, recommend 3 specific real products with variety (budget-friendly, mid-range, and premium options if possible).

User preferences:
${answersText}

CRITICAL RULES:
- Recommend exactly 3 different products with price variety
- For each product, if it exceeds the user's budget, set "budget_matched" to false
- In budget_note, explain: "Sorry, we couldn't find any [product type] within your budget that meet your requirements. This is the best option we found that matches your other needs."
- Always be honest about the price vs budget
- Provide diverse options (different brands, price points)

Return 3 specific, real product recommendations with current market data.`;

    const productData = await db.integrations.Core.InvokeLLM({
      prompt,
      add_context_from_internet: true,
      response_json_schema: {
        type: "object",
        properties: {
          products: {
            type: "array",
            items: {
              type: "object",
              properties: {
                name: { type: "string" },
                price: { type: "string" },
                description: { type: "string" },
                rating: { type: "number" },
                features: { type: "array", items: { type: "string" } },
                budget_matched: { type: "boolean" },
                budget_note: { type: "string" },
                image_prompt: { type: "string" }
              }
            }
          }
        }
      }
    });

    const productsWithImages = await Promise.all(
      productData.products.map(async (product) => {
        const imageResult = await db.integrations.Core.GenerateImage({
          prompt: product.image_prompt || `Professional product photography of ${product.name}, clean white background, studio lighting`
        });
        return {
          ...product,
          image_url: imageResult.url,
          search_url: `https://www.google.com/search?q=${encodeURIComponent(product.name + " buy")}`
        };
      })
    );

    setProducts(productsWithImages);

    if (user) {
      try {
        await db.entities.SearchHistory.create({
          product_type: answers.product,
          answers: answers,
          recommended_product: productsWithImages[0],
          budget_matched: productsWithImages[0].budget_matched !== false
        });
      } catch (e) {
        console.log("Failed to save history:", e);
      }
    }

    setIsLoadingProduct(false);
  };

  const handleRestart = () => {
    setMessages([
      { text: "Hey there! ðŸ‘‹ I'm Findify, your personal shopping assistant. I'll ask you a few quick questions to find the perfect product for you.\n\nSo, what product are you looking for?", isUser: false }
    ]);
    setQuestionIndex(0);
    setProductName("");
    setAnswers({});
    setDynamicQuestions([]);
    setFlowComplete(false);
    setProducts([]);
    setIsLoadingProduct(false);
    setIsThinking(false);
  };

  const handleLogout = async () => {
    await db.auth.logout();
  };

  const handleLogin = () => {
    db.auth.redirectToLogin();
  };

  const showInput = !flowComplete && !isThinking;
  const showFindButton = flowComplete && products.length === 0 && !isLoadingProduct;

  return (
    <div className="min-h-screen bg-gradient-to-b from-slate-50 via-white to-indigo-50/30">
      <div className="sticky top-0 z-10 bg-white/80 backdrop-blur-xl border-b border-slate-100">
        <div className="max-w-lg mx-auto px-4 py-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-3">
              <div className="h-10 w-10 rounded-2xl bg-gradient-to-br from-indigo-500 to-violet-600 flex items-center justify-center shadow-lg shadow-indigo-200/50">
                <Sparkles className="h-5 w-5 text-white" />
              </div>
              <div>
                <h1 className="text-lg font-bold text-slate-800 tracking-tight">Findify</h1>
                <p className="text-xs text-slate-400">Your AI Shopping Assistant</p>
              </div>
            </div>
            <div className="flex items-center gap-2">
              {questionIndex > 0 && (
                <Button
                  variant="ghost"
                  size="sm"
                  onClick={handleRestart}
                  className="text-slate-400 hover:text-slate-600 rounded-xl"
                >
                  <RotateCcw className="h-4 w-4 mr-1.5" />
                  Start over
                </Button>
              )}
              {user && (
                <>
                  <Link to={createPageUrl("ForYou")}>
                    <Button
                      variant="ghost"
                      size="sm"
                      className="text-slate-400 hover:text-slate-600 rounded-xl"
                    >
                      <Heart className="h-4 w-4" />
                    </Button>
                  </Link>
                  <Link to={createPageUrl("MyFavorites")}>
                    <Button
                      variant="ghost"
                      size="sm"
                      className="text-slate-400 hover:text-slate-600 rounded-xl"
                    >
                      <Bookmark className="h-4 w-4" />
                    </Button>
                  </Link>
                  <Button
                    variant="ghost"
                    size="sm"
                    onClick={() => setShowHistory(true)}
                    className="text-slate-400 hover:text-slate-600 rounded-xl"
                  >
                    <History className="h-4 w-4" />
                  </Button>
                </>
              )}
              <DropdownMenu>
                <DropdownMenuTrigger asChild>
                  <Button variant="ghost" size="icon" className="rounded-xl">
                    <User className="h-5 w-5 text-slate-600" />
                  </Button>
                </DropdownMenuTrigger>
                <DropdownMenuContent align="end" className="w-48">
                  {user ? (
                    <>
                      <div className="px-2 py-2 border-b border-slate-100">
                        <p className="text-xs font-medium text-slate-900">{user.full_name || user.email}</p>
                        <p className="text-xs text-slate-400 truncate">{user.email}</p>
                      </div>
                      <DropdownMenuItem onClick={() => setShowHistory(true)}>
                        <History className="h-4 w-4 mr-2" />
                        Search History
                      </DropdownMenuItem>
                      <DropdownMenuItem onClick={handleLogout}>
                        Logout
                      </DropdownMenuItem>
                    </>
                  ) : (
                    <DropdownMenuItem onClick={handleLogin}>
                      Login / Sign Up
                    </DropdownMenuItem>
                  )}
                </DropdownMenuContent>
              </DropdownMenu>
            </div>
          </div>
          {questionIndex > 0 && !product && (
            <div className="mt-3">
              <QuestionProgress current={questionIndex} total={TOTAL_QUESTIONS} />
            </div>
          )}
        </div>
      </div>

      <div className="max-w-lg mx-auto px-4 py-6">
        <div className="space-y-4 pb-4">
          <AnimatePresence>
            {messages.map((msg, i) => (
              <MessageBubble
                key={i}
                message={msg.text}
                isUser={msg.isUser}
              />
            ))}
          </AnimatePresence>

          {isThinking && (
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              className="flex items-center gap-3 max-w-[85%]"
            >
              <div className="h-8 w-8 rounded-full bg-gradient-to-br from-indigo-500 to-violet-600 flex items-center justify-center shadow-lg shadow-indigo-200/50">
                <Sparkles className="h-4 w-4 text-white" />
              </div>
              <div className="bg-white rounded-2xl rounded-bl-md border border-slate-100 shadow-sm px-4 py-3">
                <div className="flex items-center gap-1.5">
                  <div className="h-2 w-2 rounded-full bg-indigo-400 animate-bounce" style={{ animationDelay: "0ms" }} />
                  <div className="h-2 w-2 rounded-full bg-violet-400 animate-bounce" style={{ animationDelay: "150ms" }} />
                  <div className="h-2 w-2 rounded-full bg-purple-400 animate-bounce" style={{ animationDelay: "300ms" }} />
                </div>
              </div>
            </motion.div>
          )}

          {showFindButton && <FindProductButton onClick={handleFindProduct} />}

          {isLoadingProduct && (
            <>
              <ProductCard isLoading />
              <ProductCard isLoading />
              <ProductCard isLoading />
            </>
          )}

          {products.length > 0 && (
            <div className="space-y-6">
              {products.map((product, i) => (
                <ProductCard key={i} product={product} user={user} />
              ))}
            </div>
          )}

          <div ref={chatEndRef} />
        </div>
      </div>

      {showInput && (
        <div className="fixed bottom-0 left-0 right-0 bg-gradient-to-t from-white via-white to-transparent pt-6 pb-4 px-4">
          <div className="max-w-lg mx-auto">
            <ChatInput
              onSend={handleSend}
              placeholder={questionIndex === 0 ? "e.g. Wireless headphones" : "Type your answer..."}
            />
          </div>
        </div>
      )}

      {showInput && <div className="h-24" />}

      {showHistory && <HistoryModal onClose={() => setShowHistory(false)} />}
    </div>
  );
}